---
const {active} = Astro.props;
---
<header class="header-container">
        <div class="navbar-container">
            <div class="navbar-brand">
                <span style="font-weight: 700;">Philip</span>
                L. Soriano
            </div>
            <nav id="navbar-main" class="navbar-main" role="navigation"> 
                <ul class ="navbar-list">
                    <li id="navbar-item-about" class ="navbar-item">
                        <a class = `navbar-link ${active === "about" ? "active" : ""}` href="/">about</a>
                    </li>
                    <li id="navbar-item-projects" class ="navbar-item">
                        <a class = `navbar-link ${active === "projects" ? "active" : ""}` href="/projects/" >projects</a>
                    </li>
                    <li id="navbar-item-resume" class ="navbar-item"> 
                        <a class =`navbar-link ${active === "resume" ? "active" : ""}` href="/resume/">resume</a>
                    </li>
                    <li id="navbar-item-theme" class="navbar-item">☀️</li>
                </ul>
            </nav>
        </div>
</header>

<style>
.navbar-container
{
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom: 0.1rem solid #404043;
}
.navbar-list
{
    display: inline-block;
    list-style: none;
}
.navbar-brand
{
    font-size: 2rem;
    font-weight: 300;
}
.navbar-item
{
    list-style: none;
    display: inline-block;
    padding: 1rem 1.5rem 1rem 1.5rem;
    font-size: 1.6rem;
    font-weight: 400;
    cursor: pointer;
    transition: color 300ms;
    color:#1C1C1D;
    
    &>a
    {
        color:#C0C0C0;
        text-decoration: none;
        &.active
        {
            font-weight: 500;
            color:#2591B2;
            text-decoration: underline;
        }
        &:hover:not(.active)
        {
            cursor: pointer;
            color:#2591b282
        }
    }
}

#navbar-item-theme
{
    transition:background-color 300ms;
    &:hover
    {
        cursor: pointer;
        background-color: #69696e;
    }
    &.dark-mode-toggled
    {
            filter:invert(1)

    }
}
</style>
