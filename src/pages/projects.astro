---
import Header from "../components/Header.astro";
import ProjectItem from "../components/ProjectItem.astro";
import MainLayout from "../layouts/MainLayout.astro";

import TaylorTile from "../assets/projects/pi-taylorrenegade/pi-taylorrenegade-tile.png"
import ThesisTile from "../assets/projects/pi-thesis/pi-thesis-tile.webp"
import AnalysisTile from "../assets/projects/pi-geospatial/pi-geospatial-tile.webp"
import SanicTile from "../assets/projects/pi-sanic/pi-sanic-tile.webp"
import toDoTile from "../assets/projects/pi-todolist/pi-todolist-tile.webp"
import ticTacToeTile from "../assets/projects/pi-tictactoe/pi-tictactoe.webp"
---

<MainLayout type ="1">
    <Header slot="header" active=`projects`/>
        <main class="main-container" role="main">
            <div class="section-container">
                <header class="section-header">
                    <h1 class="section-title">
                        <span style="font-weight:900;">Projects</span>
                    </h1>
                </header>
                <article class="section-main project-main">
                 
                        <ProjectItem
                            imageSrc = {TaylorTile} 
                            projectTitle={`Taylor Ross <br/>Forensic Art Portfolio`}
                            projectSub="Portfolio Website"
                            projectTech={`AstroJS, HTML5 <br/> CSS, Javascript`}
                            altText="Taylor Ross standing beside her dissertation work."
                            link="/projects/taylor-portfolio"
                            loading="eager"
                        />  
                         <ProjectItem
                            imageSrc = {ThesisTile} 
                            projectTitle="Thesis Contribution"
                            projectSub="Facial Recognition APIs"
                            projectTech={`AWS Facial Recognition<br/>CompreFace / Face++<br/>Python, Thesis Editing`}
                            altText="Taylor Ross standing beside her dissertation work."
                            link="/projects/thesis-contribution"
                            loading="eager"
                        />  
                           <ProjectItem
                            imageSrc = {AnalysisTile} 
                            projectTitle={`Analysis of <br/> Geospatial Data`}
                            projectSub="Python Script"
                            projectTech={`Python / Matplotlib / Pandas<br/>SciPy / GeoPandas`}
                            altText="Taylor Ross standing beside her dissertation work."
                            link="/projects/geospatial-analysis"
                            loading="eager"
                        />  
                       
                        <ProjectItem
                            imageSrc = {SanicTile} 
                            projectTitle={`Sonic Parody Game`}
                            projectSub="UWP Game"
                            projectTech={`C# / Universal Windows Platform`}
                            altText="Taylor Ross standing beside her dissertation work."
                            link="/projects/sanic"
                            loading="lazy"
                        />  
                       <ProjectItem
                            imageSrc = {toDoTile} 
                            projectTitle={`To-Do List`}
                            projectSub="Web Application"
                            projectTech={`Django / Django Rest <br/> Javascript/CSS3/HTML5`}
                            altText="Taylor Ross standing beside her dissertation work."
                            link="/projects/todolist"
                            loading="lazy"
                        />  
                         <ProjectItem
                            imageSrc = {ticTacToeTile} 
                            projectTitle={`Tic Tac Toe`}
                            projectSub="Web Application"
                            projectTech={`Javascript/CSS3/HTML5`}
                            altText="Taylor Ross standing beside her dissertation work."
                            link="/projects/tictactoe"
                            loading="lazy"
                        />  
                </article>
            </div>
           
        </main>
</MainLayout>

<style>
    .main-container
    {
        display:flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        margin:0 0 10rem 0;
    }
     .section-title
    {
        font-size: 3.75rem;
        font-weight: 300;
        padding:0;
        margin:2rem 0 0rem 0;
    }
    .section-sub-title
    {
        font-size: 3rem;
        font-weight: 500;
        padding:0;
        margin:2rem 0 0rem 0;
    }
    .section-subber-title
    {
        font-size: 2rem;
        font-weight: 400;
    }
    .section-main
    {
        display: flex;
        margin-top:1.5rem;
    }
     .section-container
    {
        margin: 2rem 0 2rem 0;
        width:90rem;
        
    }
    .project-main
    {
        margin:4.5rem 0 0 0;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-auto-rows: 1fr;
        grid-column-gap: 0px;
        grid-row-gap: 5%;
        place-items: center;
        margin-bottom:10rem;
    

    }



@media(max-width: 600px) 
{
    html,body{font-size: 7px; max-width: 100vw; display: flex; flex-direction: column; justify-content: center; align-items: center;} 
    .section-container{width:100%; }
    .main-container
    {width: 50rem;margin-top:2.2rem;}
    .section-header, .section-title{width: 100%; text-align: center; margin:0;}

    .project-main
    {
        margin:4.5rem 0 0 0;
        grid-template-columns: repeat(1, 1fr);
        grid-row-gap: 2%;
        margin-bottom:60rem;
        width:100%;

    }
    .project-text-container
    {
       text-align: center;
       width: 100%;
       margin:0;

    }
    .project-item
    {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        border-radius: 2.5%;
        max-width:70%;
        background-color: #212529;
        height:50rem;
   
    }
    .project-text-container
    {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        flex-direction: column;
    }
    .project-title
    {
        font-size: 3.5rem;
        font-weight: 500;
        margin:0;
        padding:0;
    }
    .project-sub-title
    {
        font-size:2.5rem;
        font-weight: 400;
        margin:0;
        padding:0;
    }
    .project-text 
    {
        font-size: 2rem;
    }
    .footer-main
    {
        font-size: 1.35rem;
  
   
    }
}

@media (min-width: 601px) and (max-width: 1080px) 
{
    html,body{font-size: 9px; display: flex; flex-direction: column; justify-content: center; align-items: center; }
    .main-container{width:90rem;}
    .section-container{    width:100%;}
    .section-header
    {
        margin:0 0 0 3.5rem;
    }
    .project-main
    {
        margin:4.5rem 0 0 0;
        grid-template-columns: repeat(3, 1fr);
        grid-row-gap: 5%;
        margin-bottom:10rem;
        width:100%;
    }
    .project-text-container
    {
       text-align: center;
       width: 100%;
       margin:0;
       height: 100%;;

    }
    .project-item
    {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        border-radius: 2.5%;
        max-width:80%;
      
        background-color: #212529;
        height:33rem;
   
    }
    .project-title
    {
        font-size: 2.45rem;
        font-weight: 500;
        margin:2rem 0rem 0.75rem 0;
        padding:0;
    }
    .project-sub-title
    {
        font-size:1.65em;
        font-weight: 400;
        margin:0 0 1.5rem 0;
        padding:0;
    }
    .project-text 
    {
        font-size: 1.5rem;

    }
}


</style>